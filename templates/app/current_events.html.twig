{% extends 'base.html.twig' %}

{% block title %}{{ 'events'|trans|title }}{% endblock %}
{% block description %}{{ 'foothill_forum_archive'|trans|title }}{% endblock %}


{% block body %}

    <ul>
        {% for e in events %}
            <li>
                <a href="{{ path('event_submission_new', e.rp) }}" class="btn btn-primary">
                    <i class="bi bi-camera"></i>
                    <b>{{ e.team.name }} v {{ e.opponent}} </b>
                </a>
                {{ e.eventDate|date }}
                {{ e.eventDate|ago }}
                {{ e.type }}
                at {{ e.location.name }}
            </li>
        {% endfor %}

    </ul>

{% endblock %}
